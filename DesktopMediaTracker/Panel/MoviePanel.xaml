<UserControl x:Class="DesktopMediaTracker.Panel.MoviePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopMediaTracker.Panel"
             mc:Ignorable="d" Height="75" Width="252">
    <Grid Margin="0,0,0,185" MouseDown="Grid_MouseDown">
        <Label x:Name="uxTitle" Content="" HorizontalAlignment="Left" Height="42" Margin="5,0,0,-42" VerticalAlignment="Top" Width="245" FontStyle="Oblique"/>
        <Label x:Name="uxYear" Content="Label" HorizontalAlignment="Left" Height="30" Margin="5,42,0,-72" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="50">
            <Label.RenderTransform>
                <TransformGroup>

                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="uxSeries" Content="Label" HorizontalAlignment="Left" Height="30" Margin="105,42,0,-72" VerticalAlignment="Top" Width="45"/>

    </Grid>
</UserControl>
